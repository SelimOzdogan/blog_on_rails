<div class="row no-gutters">
    <% @posts.each do |p| %>
    <div class="card col-12 col-xs-12 col-sm-5 col-md-3" >
        <div class="card-body">
            <h6 class="card-title">
                <%= link_to p.title, post_path(p) %>
            </h6>
            <p class="card-text card-text-index">
                <%= p.body%>
            </p>
        </div>
    </div>
    <% end %>
</div>

